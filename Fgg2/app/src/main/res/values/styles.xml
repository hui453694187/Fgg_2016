<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/title_blue</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- 无标题 -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 无标题 -->
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊，默认为true -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <!-- 后背景的暗淡度 -->
    </style>

    <!-- 继承系统默认的对话框样式 -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">

        <!-- 去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--
        对话框的动画样式
    	<item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->
    </style>

    <style name="dialog_common" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustResize</item>
    </style>
    <!-- 侧边菜单动画 -->
    <style name="PopupWindow_animation">
        <item name="android:windowEnterAnimation">@anim/popup_window_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_window_exit</item>
    </style>

    <!--买房页面的EditText-->
    <style name="Buy_EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/buy_numal_text_size</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">@dimen/hd_house_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/buy_item_hight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <!--买房页面的EditText-->
    <style name="Buy_EditText2">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/buy_numal_text_size</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">@dimen/hd_house_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/hd_house_marginLeft</item>
        <item name="android:gravity">top</item>
        <item name="android:singleLine">false</item>
    </style>

    <!--买房页面的警告图标-->
    <style name="Buy_Waning_Img">
        <item name="android:layout_width">@dimen/margin_20</item>
        <item name="android:layout_height">@dimen/margin_20</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/buy_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!--进度查询的数字-->
    <style name="Schedule_nunbum">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--进度查询的文字-->
    <style name="Schedule_nunbum_value">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--进度查询的图片-->
    <style name="Schedule_nunbum_image">
        <item name="android:background">@mipmap/schedule_arrow</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--注册页面的图标-->
    <style name="rl_regiert_imge">
        <item name="android:layout_width">@dimen/margin_20</item>
        <item name="android:layout_height">@dimen/margin_20</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!--注册页面清除的图标-->
    <style name="rl_clean_imge">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:visibility">gone</item>
    </style>
    <!--注册页面的EditText-->
    <style name="rl_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/buy_numal_text_size</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--注册页面的灰色线-->
    <style name="rl_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/black20</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!--注册页面的灰色线 顶部-->
    <style name="rl_line_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/black20</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
