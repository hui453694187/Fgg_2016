<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/nav_title"
        layout="@layout/include_head_sub_view"
        android:layout_width="match_parent"
        android:layout_height="50dp" />



    <RelativeLayout
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_item_hight">

        <View style="@style/rl_line_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/hd_house_marginLeft"
                android:gravity="center_vertical"
                android:text="@string/pu_old_number1"
                android:textColor="@color/black"
                android:textSize="@dimen/buy_numal_text_size"/>

            <TextView
                android:id="@+id/pu_old_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/hd_house_marginLeft"
                android:gravity="center_vertical"
                android:textColor="@color/blackBB"
                android:textSize="@dimen/buy_numal_text_size"/>
        </LinearLayout>

        <View style="@style/rl_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_item_hight">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/hd_house_marginLeft"
                android:gravity="center_vertical"
                android:text="新手机号:"
                android:textColor="@color/black"
                android:textSize="@dimen/buy_numal_text_size"/>
            <EditText
                android:id="@+id/pu_new_number"
                style="@style/rl_EditText"
                android:hint="@string/pu_new_number"
                android:maxLength="11"
                android:inputType="phone"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/pu_new_number_clean"
            style="@style/rl_clean_imge"
            android:src="@mipmap/rl_clean_number"/>
        <View style="@style/rl_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sms_login_relativeLayout_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_item_hight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/hd_house_marginLeft"
                android:gravity="center_vertical"
                android:text="@string/pu_verification_phone"
                android:textColor="@color/black"
                android:textSize="@dimen/buy_numal_text_size"/>

            <EditText
                android:id="@+id/pu_verification_phone"
                style="@style/rl_EditText"
                android:layout_marginRight="140dp"
                android:hint="@string/rl_sms_login_verification_phone"
                android:inputType="number"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/pu_verification_phone_get"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector_bule"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="@string/rl_sms_login_verification_phone_get"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14"/>

        <ImageView
            android:id="@+id/pu_verification_phone_get_clean"
            style="@style/rl_clean_imge"
            android:layout_marginRight="120dp"
            android:src="@mipmap/rl_clean_number"/>

        <View style="@style/rl_line"/>
    </RelativeLayout>

    <Button
        android:id="@+id/pu_bt_enter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_margin="@dimen/margin_40"
        android:background="@drawable/button_selector_bule"
        android:text="@string/pu_bt_enter"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        />
</LinearLayout>