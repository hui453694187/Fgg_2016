<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/line_top_bg"
    android:layout_height="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_icon_img"
        android:layout_centerVertical="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/Description"
        android:src="@drawable/home_user_icon"
        app:layout_widthPercent="70%h"
        app:layout_heightPercent="70%h"
        app:layout_paddingPercent="10%h"/>

    <TextView
        android:id="@+id/city_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/home_city_name"
        android:textSize="@dimen/Title" />

    <ImageView
        android:layout_toEndOf="@id/city_name_tv"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        app:layout_heightPercent="50%h"
        app:layout_marginTopPercent="25%h"
        android:src="@drawable/down_write"/>

    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="@string/home_heard_text"
        android:textSize="@dimen/Body2"
        android:visibility="gone"
        android:textColor="@color/white"
        app:layout_paddingPercent="2%" />

    <ImageView
        android:id="@+id/search_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="60%h"
        app:layout_heightPercent="60%h"
        app:layout_paddingPercent="15%h"
        android:layout_alignParentRight="true"
        app:layout_marginPercent="1%"
        android:layout_centerVertical="true"
        android:src="@drawable/search_icon" />

</com.zhy.android.percent.support.PercentRelativeLayout>