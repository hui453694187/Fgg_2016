<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <include
        android:id="@+id/head_bar_view"
        layout="@layout/include_head_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h" />

    <RadioGroup
        android:id="@+id/search_bar_rdg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/head_bar_view"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_heightPercent="6%h">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/area_rdb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:text="@string/home_filtrate_area"
                android:textColor="@color/color_radiobutton"
                android:textSize="@dimen/Body2" />

            <ImageView
                android:layout_marginLeft="6dp"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/radiobutton_drawable" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/house_rdb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:text="@string/home_filtrate_house_type"
                android:textColor="@color/color_radiobutton"
                android:textSize="@dimen/Body2" />

            <ImageView
                android:layout_marginLeft="6dp"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/radiobutton_drawable" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/price_rdb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:text="@string/home_filtrate_price"
                android:textColor="@color/color_radiobutton"
                android:textSize="@dimen/Body2" />


            <ImageView
                android:layout_marginLeft="6dp"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/radiobutton_drawable" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/school_rdb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:gravity="center"
                android:text="@string/home_filtrate_school"
                android:textColor="@color/color_radiobutton"
                android:textSize="@dimen/Body2" />

            <ImageView
                android:layout_marginLeft="6dp"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/radiobutton_drawable" />
        </LinearLayout>


    </RadioGroup>


    <FrameLayout
        android:id="@+id/home_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/search_bar_rdg"
        app:layout_heightPercent="86%h">


    </FrameLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
