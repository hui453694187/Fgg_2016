<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/nav_title"
        layout="@layout/include_head_sub_view"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ListView
        android:id="@+id/person_message_lv_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/buy_background"
        android:dividerHeight="1dp"
        android:fadeScrollbars="false"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:focusable="true"
        android:listSelector="@color/buy_background"
        android:scrollbarFadeDuration="0"
        android:scrollingCache="false"></ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/gay"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/edt_linea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/is_read_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/Body2"
            android:textColor="@color/title_blue"
            android:text="@string/person_message_is_read"/>

        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/Body2"
            android:textColor="@color/title_blue"
            android:text="@string/person_message_del"/>


    </LinearLayout>


</LinearLayout>